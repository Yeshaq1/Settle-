<% layout(layout_directory+'/mainLayout') -%>

<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title"> <%= page_title %> </h3>
        <span class="kt-subheader__separator kt-subheader__separator--v"></span>
    </div>
</div>

<div class="kt-content kt-grid__item kt-grid__item--fluid" id="kt_content">
    <div class="row">
        <div class="col-lg-12">
            <div class="kt-portlet">
                <form class="kt-form kt-form--label-right" id="roleEditFrm" action="<%= generateUrl('admin.role.store') %>" method="POST" novalidate>
                    <div class="kt-portlet__body">
                        <div class="form-group row">
                            <div class="col-lg-6">
                                <label>Role</label>
                                <input type="text" name="role" placeholder="Enter Role (only lowercase)" class="form-control">
                            </div>
                            <div class="col-lg-6">
                                <label>Role Title</label>
                                <input type="text" name="roleDisplayName" placeholder="Role Title" class="form-control">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-lg-12">
                                <label>Description</label>
                                <textarea name="desc" placeholder="Enter Description" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                    
                    <!-- hidden user id -->
					
                    <div class="kt-portlet__foot">
                        <div class="kt-form__actions">
                            <div class="row">
                                <div class="col-lg-6">
                                    <a href="<%= generateUrl('admin.role.list') %>" class="btn btn-secondary">Cancel</a>
                                    <button type="submit" class="btn btn-primary">Create</button>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    // For date picker calendar
    $(function () {
        var date = new Date();
        date.setDate(date.getDate()-1);
        $('#expiry_date').datepicker({
         autoclose: true,
         todayHighlight: true,
         format: 'yyyy-mm-dd',
         startDate: date
        });
    });
    </script>