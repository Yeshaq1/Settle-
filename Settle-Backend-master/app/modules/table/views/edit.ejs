<% layout(layout_directory+'/mainLayout') -%>

    <div class="kt-subheader   kt-grid__item" id="kt_subheader">
        <div class="kt-subheader__main">
            <h3 class="kt-subheader__title">
                <%= page_title %>
            </h3>
            <span class="kt-subheader__separator kt-subheader__separator--v"></span>
            <div class="kt-subheader__breadcrumbs">
                <!-- <a href="<%= generateUrl('user.dashboard') %>" class="kt-subheader__breadcrumbs-home">Dashboard</a>
                <span class="kt-subheader__breadcrumbs-separator"></span>
                <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">
                    <%= page_title %>
                </span> -->
            </div>
        </div>
    </div>

    <div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
        <div class="row">
            <div class="col-lg-12">
                <div class="kt-portlet">
                    <form class="kt-form kt-form--label-right" id="frmTable" action="<%= generateUrl('table.update') %>" method="POST"
                        enctype='multipart/form-data'>
          
                        <div class="kt-portlet__body">
                            <div class="form-group row">
                                <div class="col-lg-6">
                                    <label>Table Name</label>
                                    <input type="text" name="name" id="name" class="form-control" value="<%= response.name %>" data-validation-required-message="This field is required">
                                </div>
                                <div class="col-lg-6">
                                    <label>Restaurant</label>
                                    <select name="restaurant_id" id="restaurant_id" class="form-control selectpicker">
                                      <option value="">Select Restaurant</option>
                                      <% restaurantData.map(function(data){ %>
                                      <option value="<%= data._id%>" <%= (data._id.toString()==response.restaurant_id)?"Selected":"" %>><%= data.restaurant_name%></option>
                                      <% }) %>
                                    </select>
                                  </div>
                            </div>

                             <!-- Seat  -->
						 <div class="form-group row">
                            <p><b>Available Seats</b></p>
                            </div>
                        <%if(response.seat && response.seat.length > 0){%>
                           <div class="form-group row" style="display: block;" id="dynamic_field">
                               <input type="hidden" id="lastIndex" value="<%= response.seat.length %>">
                                   <%for(var i=0; i< response.seat.length; i++){%>  
                                   <div id="row<%=i%>">
                                           <div class="row">
                                               <div class="col-lg-6">
                                                   <div class="form-group">
                                                       <label for="name" class="control-label">Seat Title</label>
                                                       <div class="controls">
                                                           <input type="text" name="seat[]" class="form-control" required value="<%=response.seat[i]%>">
                                                       </div>
                                                   </div>
                                               </div>
                                               <%if(i==0){%>
                                               <div class="col-lg-2">
                                                <label class="w-100 d-block">&#160;</label>
                                                <button class="btn btn-warning addVariant" id="addInputFieldBtn"
                                                        type="button">Add More</button>
                                        </div>
                                        <%}else{%>
                                            <div class="col-lg-2">
                                                <label class="w-100 d-block">&#160;</label>
                                                    <button type="button" class="btn btn-danger btn_remove" name="remove" id="<%=i%>" onClick="removeInput(this.id)" >X</button>
                                            </div>
                                        
                                         <%}%>
                                        
                                           </div>
                                          
                                       </div>
                               
                                       <%}%>
                                       <br>
                               </div>
                           
                       <%}else{%>
                           <div class="form-group row" style="display: block; margin-left: 10px;" id="dynamic_field">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="name" class="control-label">Seat Title</label>
                                        <div class="controls">
                                            <input type="text" name="seat[]" class="form-control" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-2">
                                    <label class="w-100 d-block">&#160;</label>
                                    <button class="btn btn-warning addInsta" id="addInputFieldBtn"
                                        type="button">Add More</button>
                                </div>
                            </div>
                           </div>
                       <%}%>
       
                  
                       <div class="form-group row">
                        <div class="col-lg-12">
                            <input id="text" type="hidden" value="<%= tableQRLink %>/?tableId=<%= response._id%>"  />
                            <div id="qrcode"></div>
                       </div>
                       <div class="col-lg-4">
                        <label class="w-100 d-block">&#160;</label>
                        <button class="btn btn-warning" id="printBtn"
                            type="button">Print QR Code</button>
                       </div>
                       </div>
                       <!-- End Seat -->
                          
                        </div>
                        <div class="kt-portlet__foot">
                            <div class="kt-form__actions">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <input type="hidden" name="pid" value="<%= response._id%>">
                                        <button type="submit" class="btn btn-primary">Update</button>
                                        <a href="<%= generateUrl('table.list') %>" class="btn btn-secondary">Cancel</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
    <script src="https://cdn.rawgit.com/davidshimjs/qrcodejs/gh-pages/qrcode.min.js" type="text/javascript"></script>
    <script>
        var qrcode = new QRCode("qrcode");

function makeCode () {    
  var elText = document.getElementById("text");
  
  if (!elText.value) {
    //alert("Some");
    elText.focus();
    return;
  }
  
  qrcode.makeCode(elText.value);
}
makeCode ();

$('#printBtn').click(function(){
    var divToPrint=document.getElementById('qrcode');

var newWin=window.open('','Print-Window');

newWin.document.open();

newWin.document.write(`
<html>
<body onload="window.print()">
<center>
<h1><%= response.name %></h1>
`
+divToPrint.innerHTML+
`</center>
</body>
</html>`
);

newWin.document.close();

setTimeout(function(){newWin.close();},10);
})
</script>